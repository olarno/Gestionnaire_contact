{% extends 'base.html.twig' %}

{% block title %}liste des tags{% endblock %}

{% block body %}
	<div class="container">

		<div class="row">
			<h1>Liste des tags</h1>
		</div>

		<div class="container mt-2">
			<table class="table table-hover">
				<thead>
					<tr>
						<th scope="col"></th>
						<th scope="col">Name</th>
					    <th scope="col">Person</th>
					</tr>
				</thead>
				<tbody>

					{% for tag in tags %}
						<tr>
							<td scope="row">
								<a href="" class="btn btn-outline-danger btn-sm">Edit</a>
								<a href="" class="btn btn-outline-danger btn-sm">Read</a>
							</td>
							<td scope="col">{{ tag.name }}</td>
							<td scope="col">12<td>
						</tr>
					{% endfor %}

				</tbody>
			</table>
		</div>


	</div>
{% endblock %}
